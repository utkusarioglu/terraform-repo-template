{
  "runOnSave.commands": [
    {
      "match": "\\.tf$",
      "isAsync": true,
      "command": "scripts/terraform.sh fmt -recursive",
    },
    {
      "match": "\\.tfvars$",
      "isAsync": true,
      "command": "scripts/terraform.sh fmt -recursive",
    }
  ],
  // this is because terraform plan and apply output can be humonguous
  "terminal.integrated.scrollback": 10000
}
